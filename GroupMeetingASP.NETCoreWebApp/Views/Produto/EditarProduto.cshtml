@model CRUD.Models.ProdutoModel
@{
    ViewData["Title"] = "EditarProduto";
}
<hr>
<h4>Editar Produto</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarProduto">
            <input type="hidden" asp-for="IdProduto" />
            <div class="form-group">
                <label asp-for="IdProduto" class="control-label"></label>
                <input asp-for="IdProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label"> Nome</label>
                <input asp-for="NomeProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>

                <select class="form-control" asp-for="StatusProd">
                    <option value="Ativo"> Ativo</option>
                    <option value="Inativo">Inativo</option>
                </select>
            </div>

          
            <div class="form-group">
                <input type="submit" value="Confirmar Edição" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-md-8">

    </div>
</div>
<div>
    <a asp-action="Index">Voltar ao Início</a>
</div>

