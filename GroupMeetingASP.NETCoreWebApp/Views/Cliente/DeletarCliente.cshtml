@model CRUD.Models.ClienteModel
@{
    ViewData["Title"] = "DeleteMeeting";
}

<h3 class="alert">Deseja confirmar a exclusão?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
           Nome do Cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
           CPF
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt>
           Produto
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdProduto)
        </dd>

    </dl>

    <form asp-action="DeleteMeeting">
        <input type="hidden" asp-for="IdCliente" />
        <input type="submit" value="Sim" class="btn btn-danger btn-sm" /> <a asp-action="Index" class="btn btn-danger">Não</a>
    </form>
</div>  