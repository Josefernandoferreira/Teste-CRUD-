@model CRUD.Models.ClienteModel
@{
    ViewData["Title"] = "AdicionarCliente";
}

<h2>Adicionar Novo Cliente</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarCliente">
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="NomeCliente" class="form-control" />
                <span class="alert-danger" asp-validation-for="NomeCliente"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span class="alert-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CPF</label>
                <input asp-for="CPF" class="form-control" />
                <span class="alert-danger" asp-validation-for="CPF"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ID Produto</label>
                <input asp-for="IdProduto" class="form-control" />
                <span class="alert-danger" asp-validation-for="IdProduto"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar Cliente" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
    </div>
</div>
<div>
    <a asp-action="Index">Voltar ao Inicío</a>
</div>